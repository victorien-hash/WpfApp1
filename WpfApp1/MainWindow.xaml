<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d" Icon="/icones/connection.ico"
        Title="TP2Ciné – Connexion" Height="450" Width="800" Background="#1E1E1E" WindowStartupLocation="CenterScreen">
        
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- Titre -->
            <TextBlock Text="🎬 TP2Ciné" 
           Foreground="White" FontSize="32" FontWeight="Bold" 
           HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Champ utilisateur -->
            <Label Content="Nom d'utilisateur" Foreground="White" Margin="0,5"/>
            <TextBox Margin="0,0,0,10" Padding="10"/>

            <!-- Champ mot de passe -->
            <Label Content="Mot de passe" Foreground="White" Margin="0,5"/>
            <PasswordBox Margin="0,0,0,15" Padding="10"/>

            <!-- Bouton de connexion -->
            <Button Content="Se connecter" 
        Background="#E50914" Foreground="White" 
        Margin="0,10" Padding="10"/>

            <!-- Lien d'inscription -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <TextBlock Text="Pas de compte ? " Foreground="White"/>
                <TextBlock Text="Créer un compte" 
               Foreground="#E50914" 
               TextDecorations="Underline" 
               Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
