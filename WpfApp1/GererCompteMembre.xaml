<Window x:Class="WpfApp1.GererCompteMembre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TP2Ciné – Gestion membre"
        Height="500" Width="800"
        Background="#1E1E1E" Icon="/icones/gerercomptes.ico" 
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="60"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- En-tête -->
    <Border Grid.Row="0" Background="#E50914">
        <Grid Margin="20,0">
            <TextBlock Text="🎬 TP2Ciné – Gestion membre"
                       Foreground="White" FontSize="20" FontWeight="Bold"
                       VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <TextBlock Text="Compte membre"
                       Foreground="White" FontSize="14"
                       VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>
    </Border>

    <!-- Contenu principal -->
    <TabControl Grid.Row="1" Margin="20" Background="#2E2E2E" Foreground="White">

        <!-- Onglet 1 : S'abonner -->
        <TabItem Header="S'abonner">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Background="#1E1E1E" Margin="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">

                        <TextBlock Text="Choisissez votre abonnement"
                                   Foreground="White" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <Label Content="Type d'abonnement" Foreground="White"/>
                        <ComboBox Margin="0,0,0,10">
                            <ComboBoxItem Content="Mensuel - 9,99$" IsSelected="True"/>
                            <ComboBoxItem Content="Annuel - 99,99$"/>
                            <ComboBoxItem Content="Premium - 14,99$"/>
                        </ComboBox>

                        <Label Content="Numéro de carte bancaire" Foreground="White"/>
                        <TextBox Margin="0,0,0,10"/>

                        <Label Content="Date d'expiration (MM/AA)" Foreground="White"/>
                        <TextBox Margin="0,0,0,10"/>

                        <Label Content="CVV" Foreground="White"/>
                        <TextBox Margin="0,0,0,20"/>

                        <Button Content="S'abonner"
                                Background="#E50914" Foreground="White"
                                Width="150" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>

        <!-- Onglet 2 : Obtenir remboursement -->
        <TabItem Header="Obtenir remboursement">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Background="#1E1E1E" Margin="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                        <TextBlock Text="Demande de remboursement"
                                   Foreground="White" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <Label Content="Type de remboursement" Foreground="White"/>
                        <ComboBox Margin="0,0,0,10">
                            <ComboBoxItem Content="Mensuel - 9,99$" IsSelected="True"/>
                            <ComboBoxItem Content="Annuel - 99,99$"/>
                            <ComboBoxItem Content="Premium - 14,99$"/>
                        </ComboBox>

                        <Label Content="Montant à rembourser ($)" Foreground="White"/>
                        <TextBox Margin="0,0,0,10"/>

                        <Label Content="Motif de la demande" Foreground="White"/>
                        <TextBox AcceptsReturn="True" Height="80"
                                 TextWrapping="Wrap" Margin="0,0,0,20"/>

                        <Label Content="Mode de remboursement" Foreground="White"/>
                        <ComboBox Margin="0,0,0,20">
                            <ComboBoxItem Content="Carte bancaire" IsSelected="True"/>
                            <ComboBoxItem Content="Crédit du compte"/>
                        </ComboBox>

                        <Button Content="Soumettre la demande"
                                Background="#E50914" Foreground="White"
                                FontWeight="Bold" Width="200"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>

        <!-- Onglet 3 : Consulter solde -->
        <TabItem Header="Consulter solde">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Background="#1E1E1E" Margin="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                        <TextBlock Text="Votre solde actuel"
                                   Foreground="White" FontSize="24" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <Border Background="#2E2E2E" CornerRadius="10" Padding="20"
                                BorderBrush="#E50914" BorderThickness="2" HorizontalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="Solde actuel :" Foreground="White"
                                           FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBlock Text="$24.50"
                                           Foreground="#00FF7F" FontSize="28"
                                           FontWeight="Bold" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Button Content="Actualiser le solde"
                                Background="#E50914" Foreground="White"
                                FontWeight="Bold" Width="200"
                                Margin="0,20,0,0" HorizontalAlignment="Center"/>

                        <TextBlock Text="Votre solde vous permet d'acheter des films, 
approvisionnez votre compte à tout moment depuis l'onglet 'Approvisionner compte'."
                                   Foreground="LightGray" FontSize="13"
                                   TextWrapping="Wrap" TextAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>

        <!-- Onglet 4 : Consulter transactions -->
        <TabItem Header="Consulter transactions">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Background="#1E1E1E" Margin="10">
                    <StackPanel Margin="20">
                        <TextBlock Text="Historique des transactions"
                                   FontSize="20" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" Margin="0 0 0 20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Date" FontWeight="Bold" Foreground="White" Grid.Column="0"/>
                            <TextBlock Text="Type" FontWeight="Bold" Foreground="White" Grid.Column="1"/>
                            <TextBlock Text="Montant" FontWeight="Bold" Foreground="White" Grid.Column="2"/>
                            <TextBlock Text="Statut" FontWeight="Bold" Foreground="White" Grid.Column="3"/>
                        </Grid>

                        <Separator Margin="0,5,0,10"/>

                        <StackPanel>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="02/11/2025" Foreground="White" Grid.Column="0"/>
                                <TextBlock Text="Dépôt" Foreground="White" Grid.Column="1"/>
                                <TextBlock Text="250.00 $" Foreground="White" Grid.Column="2"/>
                                <TextBlock Text="Confirmée" Foreground="LightGreen" Grid.Column="3"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="01/11/2025" Foreground="White" Grid.Column="0"/>
                                <TextBlock Text="Dépôt" Foreground="White" Grid.Column="1"/>
                                <TextBlock Text="100.00 $" Foreground="White" Grid.Column="2"/>
                                <TextBlock Text="En attente" Foreground="Orange" Grid.Column="3"/>
                            </Grid>

                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="30/10/2025" Foreground="White" Grid.Column="0"/>
                                <TextBlock Text="Paiement" Foreground="White" Grid.Column="1"/>
                                <TextBlock Text="45.00 $" Foreground="White" Grid.Column="2"/>
                                <TextBlock Text="Confirmée" Foreground="LightGreen" Grid.Column="3"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>

        <!-- Onglet 5 : Approvisionner compte -->
        <TabItem Header="Approvisionner compte">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Background="#1E1E1E" Margin="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                        <TextBlock Text="Approvisionner votre compte"
                                   Foreground="White" FontSize="20" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <Label Content="Montant à ajouter ($)" Foreground="White"/>
                        <TextBox Margin="0,0,0,10" Background="White" Foreground="#2E2E2E"/>

                        <Label Content="Méthode de paiement" Foreground="White"/>
                        <ComboBox Margin="0,0,0,20" Background="#2E2E2E" Foreground="Black">
                            <ComboBoxItem Content="Carte bancaire" IsSelected="True"/>
                            <ComboBoxItem Content="PayPal"/>
                            <ComboBoxItem Content="Virement"/>
                        </ComboBox>

                        <Button Content="Approvisionner"
                                Width="150" Background="#E50914"
                                Foreground="White" FontWeight="Bold"
                                HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</Grid>
    
</Window>
