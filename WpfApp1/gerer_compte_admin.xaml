<Window x:Class="WpfApp1.gerer_compte_admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TP2Ciné – Gestion compte administrateur"
        Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E" Icon="/icones/gerercomptes.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- En-tête -->
            <RowDefinition Height="*"/>
            <!-- Contenu -->
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="#E50914">
            <Grid Margin="20,0">
                <TextBlock Text="🎬 TP2Ciné – Administration"
                           Foreground="White" FontSize="20" FontWeight="Bold"
                           VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBlock Text="Gestion du compte administrateur"
                           Foreground="White" FontSize="14"
                           VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Contenu principal avec onglets -->
        <TabControl Grid.Row="1" Margin="20" Background="#2E2E2E" Foreground="White">

            <!-- Onglet 1 : Modifier un film -->
            <TabItem Header="Modifier un film">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="420" Margin="0,20,0,20">

                        <TextBlock Text="🎬 Modifier un film"
                                   Foreground="White" FontSize="26" FontWeight="Bold"
                                   HorizontalAlignment="Center" Margin="0,0,0,18"/>

                        <Label Content="Titre du film" Foreground="White" Margin="0,6,0,2"/>
                        <TextBox x:Name="TitreFilmTextBox" Margin="0,0,0,10" Padding="10"/>

                        <Label Content="Genre" Foreground="White" Margin="0,6,0,2"/>
                        <ComboBox x:Name="GenreComboBox" Margin="0,0,0,10" Padding="8">
                            <ComboBoxItem Content="Action"/>
                            <ComboBoxItem Content="Comédie"/>
                            <ComboBoxItem Content="Drame"/>
                            <ComboBoxItem Content="Science-fiction"/>
                            <ComboBoxItem Content="Horreur"/>
                        </ComboBox>

                        <Label Content="Année de sortie" Foreground="White" Margin="0,6,0,2"/>
                        <TextBox x:Name="AnneeTextBox" Margin="0,0,0,10" Padding="10"/>

                        <Label Content="Description" Foreground="White" Margin="0,6,0,2"/>
                        <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,18" Padding="10"
                                 Height="90" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="💾 Enregistrer"
                                    Background="#E50914" Foreground="White"
                                    Padding="10,6" Width="130" Margin="0,0,12,0"/>
                            <Button Content="↩ Retour"
                                    Background="#3A3A3A" Foreground="White"
                                    Padding="10,6" Width="130"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Ajouter un film acheté -->
            <TabItem Header="Ajouter un film">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="420" Margin="0,20,0,20">

                        <TextBlock Text="🎬 Ajouter un film acheté"
                       Foreground="White" FontSize="26" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,18"/>

                        <Label Content="Titre du film" Foreground="White" Margin="0,6,0,2"/>
                        <TextBox x:Name="AjouterTitreTextBox" Margin="0,0,0,10" Padding="10"/>

                        <Label Content="Genre" Foreground="White" Margin="0,6,0,2"/>
                        <ComboBox x:Name="AjouterGenreComboBox" Margin="0,0,0,10" Padding="8">
                            <ComboBoxItem Content="Action"/>
                            <ComboBoxItem Content="Comédie"/>
                            <ComboBoxItem Content="Drame"/>
                            <ComboBoxItem Content="Science-fiction"/>
                            <ComboBoxItem Content="Horreur"/>
                        </ComboBox>

                        <Label Content="Année de sortie" Foreground="White" Margin="0,6,0,2"/>
                        <TextBox x:Name="AjouterAnneeTextBox" Margin="0,0,0,10" Padding="10"/>

                        <Label Content="Description" Foreground="White" Margin="0,6,0,2"/>
                        <TextBox x:Name="AjouterDescriptionTextBox" Margin="0,0,0,18" Padding="10"
                     Height="90" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="💾 Ajouter"
                        Background="#E50914" Foreground="White"
                        Padding="10,6" Width="130" Margin="0,0,12,0"
                        />
                            <Button Content="↩ Retour"
                        Background="#3A3A3A" Foreground="White"
                        Padding="10,6" Width="130"
                        />
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- enlever un film -->
            <TabItem Header="Enlever un film">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="420" Margin="0,20,0,20">

                        <TextBlock Text="❌ Enlever un film"
                       Foreground="White" FontSize="26" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,18"/>

                        <Label Content="Titre du film à enlever" Foreground="White" Margin="0,6,0,2"/>
                        <TextBox x:Name="TitreFilmASupprimerTextBox" Margin="0,0,0,18" Padding="10"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="🗑️ Supprimer"
                        Background="#E50914" Foreground="White"
                        Padding="10,6" Width="130" Margin="0,0,12,0"
                        />
                            <Button Content="↩ Retour"
                        Background="#3A3A3A" Foreground="White"
                        Padding="10,6" Width="130"
                        />
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>


            <!-- Données financières -->
            <TabItem Header="Obtenir données financières">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="420" Margin="0,20,0,20">

                        <TextBlock Text="💰 Obtenir les données financières d'un utilisateur"
                       Foreground="White" FontSize="24" FontWeight="Bold"
                       TextWrapping="Wrap" TextAlignment="Center"
                       Margin="0,0,0,20"/>

                        <Label Content="Sélectionnez un utilisateur" Foreground="White" Margin="0,6,0,2"/>
                        <ComboBox x:Name="UtilisateurComboBox" Margin="0,0,0,18" Padding="8">
                            <ComboBoxItem Content="Alice Dupont"/>
                            <ComboBoxItem Content="Jean Tremblay"/>
                            <ComboBoxItem Content="Sophie Leblanc"/>
                            <ComboBoxItem Content="Marc Gagnon"/>
                        </ComboBox>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="📊 Obtenir données financières"
                        Background="#E50914" Foreground="White"
                        Padding="10,6" Width="250" Margin="0,0,12,0"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
