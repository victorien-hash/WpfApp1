<Window x:Class="WpfApp1.ModifierCompteUtilisateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="TP2Ciné – Modifier un compte utilisateur" 
        Height="500" Width="800"
        Background="#1E1E1E" Icon="/icones/modifierutilisateur.ico"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Width="460" Margin="0,20,0,20">

                <!-- Titre -->
                <TextBlock Text="👤 Modifier un compte utilisateur" 
                           Foreground="White" FontSize="26" FontWeight="Bold" 
                           TextAlignment="Center" 
                           Margin="0,0,0,25"/>

                <!-- Sélection utilisateur -->
                <Label Content="Sélectionnez un utilisateur" Foreground="White" Margin="0,5"/>
                <ComboBox x:Name="UtilisateurComboBox" Margin="0,0,0,15" Padding="8">
                    <ComboBoxItem Content="Alice Dupont"/>
                    <ComboBoxItem Content="Jean Tremblay"/>
                    <ComboBoxItem Content="Sophie Leblanc"/>
                    <ComboBoxItem Content="Marc Gagnon"/>
                </ComboBox>

                <!-- Nom complet -->
                <Label Content="Nom complet" Foreground="White" Margin="0,5"/>
                <TextBox x:Name="NomCompletTextBox" Margin="0,0,0,10" Padding="10"/>

                <!-- Courriel -->
                <Label Content="Adresse courriel" Foreground="White" Margin="0,5"/>
                <TextBox x:Name="EmailTextBox" Margin="0,0,0,10" Padding="10"/>

                <!-- Mot de passe -->
                <Label Content="Mot de passe" Foreground="White" Margin="0,5"/>
                <PasswordBox x:Name="MotDePasseBox" Margin="0,0,0,15" Padding="10"/>

                <!-- Abonnement -->
                <Label Content="Type d'abonnement" Foreground="White" Margin="0,5"/>
                <ComboBox x:Name="AbonnementComboBox" Margin="0,0,0,25" Padding="8">
                    <ComboBoxItem Content="Aucun"/>
                    <ComboBoxItem Content="Mensuel - Standard"/>
                    <ComboBoxItem Content="Mensuel - Premium"/>
                </ComboBox>

                <!-- Boutons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="💾 Enregistrer"
                            Background="#E50914" Foreground="White"
                            Padding="10,6" Width="130" Margin="0,0,12,0"/>
                    <Button Content="↩ Annuler"
                            Background="#3A3A3A" Foreground="White"
                            Padding="10,6" Width="130"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
